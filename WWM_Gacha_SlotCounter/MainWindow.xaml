<Window x:Class="WWM_Gacha_SlotCounter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WWM_Gacha_SlotCounter"
        mc:Ignorable="d"
        Title="Gacha Slot Counter ✨" 
        Height="900" 
        Width="1000"
        Background="#F5F5F5"
        WindowStartupLocation="CenterScreen">
    <Grid Background="#F5F5F5">
        <StackPanel VerticalAlignment="Top" HorizontalAlignment="Center" Width="950" Margin="0,20,0,0">
            <!-- Title -->
            <TextBlock 
                Text="Where Gacha Meets - Slot Counter"
                FontSize="48"
                FontWeight="Bold"
                Foreground="#2C3E50"
                TextAlignment="Center"
                Margin="0,0,0,5"/>
            
            <!-- Subtitle -->
            <TextBlock 
                Text="Made by your beloved Will - MaiMaiYeuEm"
                FontSize="14"
                Foreground="#7F8C8D"
                TextAlignment="Center"
                Margin="0,0,0,20"/>
            
            <!-- Subtitle 2 -->
            <TextBlock 
                Text="Track your gacha pulls and luck"
                FontSize="18"
                Foreground="#7F8C8D"
                TextAlignment="Center"
                Margin="0,0,0,20"/>
            
            <!-- Counter Display -->
            <Border 
                Background="#FFFFFF" 
                CornerRadius="15"
                Padding="30"
                Margin="0,0,0,20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock 
                        Text="Total Pulls"
                        FontSize="16"
                        Foreground="#7F8C8D"
                        TextAlignment="Center"
                        Margin="0,0,0,10"/>
                    <TextBlock 
                        x:Name="CounterDisplay"
                        Text="0"
                        FontSize="72"
                        FontWeight="Bold"
                        Foreground="#E74C3C"
                        TextAlignment="Center"
                        Margin="0"/>
                </StackPanel>
            </Border>
            
            <!-- Slots Section -->
            <Border 
                Background="#FFFFFF" 
                CornerRadius="15"
                Padding="20"
                Margin="0,0,0,20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock 
                        Text="🎰 Slot Results"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="#2C3E50"
                        Margin="0,0,0,15"/>
                    
                    <!-- Slot 1 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Slot 1:" FontWeight="Bold" Foreground="#2C3E50" Width="70" VerticalAlignment="Center"/>
                        <Button x:Name="Slot1White" Content="⚪ White" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFFFFF" BorderBrush="#2C3E50" BorderThickness="2" Cursor="Hand" Tag="Slot1"/>
                        <Button x:Name="Slot1Purple" Content="🟣 Purple" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#E8D5F2" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot1"/>
                        <Button x:Name="Slot1Gold" Content="🟡 Gold" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFD700" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot1"/>
                        <TextBlock x:Name="Slot1Result" Text="Select" Foreground="#999999" Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Bold" MinWidth="80"/>
                        <Button x:Name="Slot1Counter" Content="Count: 0" Padding="12,8" Margin="15,0,0,0" Background="#F0F0F0" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                    
                    <!-- Slot 2 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Slot 2:" FontWeight="Bold" Foreground="#2C3E50" Width="70" VerticalAlignment="Center"/>
                        <Button x:Name="Slot2White" Content="⚪ White" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFFFFF" BorderBrush="#2C3E50" BorderThickness="2" Cursor="Hand" Tag="Slot2"/>
                        <Button x:Name="Slot2Purple" Content="🟣 Purple" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#E8D5F2" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot2"/>
                        <Button x:Name="Slot2Gold" Content="🟡 Gold" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFD700" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot2"/>
                        <TextBlock x:Name="Slot2Result" Text="Select" Foreground="#999999" Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Bold" MinWidth="80"/>
                        <Button x:Name="Slot2Counter" Content="Count: 0" Padding="12,8" Margin="15,0,0,0" Background="#F0F0F0" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                    
                    <!-- Slot 3 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Slot 3:" FontWeight="Bold" Foreground="#2C3E50" Width="70" VerticalAlignment="Center"/>
                        <Button x:Name="Slot3White" Content="⚪ White" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFFFFF" BorderBrush="#2C3E50" BorderThickness="2" Cursor="Hand" Tag="Slot3"/>
                        <Button x:Name="Slot3Purple" Content="🟣 Purple" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#E8D5F2" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot3"/>
                        <Button x:Name="Slot3Gold" Content="🟡 Gold" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFD700" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot3"/>
                        <TextBlock x:Name="Slot3Result" Text="Select" Foreground="#999999" Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Bold" MinWidth="80"/>
                        <Button x:Name="Slot3Counter" Content="Count: 0" Padding="12,8" Margin="15,0,0,0" Background="#F0F0F0" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                    
                    <!-- Slot 4 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Slot 4:" FontWeight="Bold" Foreground="#2C3E50" Width="70" VerticalAlignment="Center"/>
                        <Button x:Name="Slot4White" Content="⚪ White" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFFFFF" BorderBrush="#2C3E50" BorderThickness="2" Cursor="Hand" Tag="Slot4"/>
                        <Button x:Name="Slot4Purple" Content="🟣 Purple" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#E8D5F2" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot4"/>
                        <Button x:Name="Slot4Gold" Content="🟡 Gold" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFD700" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot4"/>
                        <TextBlock x:Name="Slot4Result" Text="Select" Foreground="#999999" Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Bold" MinWidth="80"/>
                        <Button x:Name="Slot4Counter" Content="Count: 0" Padding="12,8" Margin="15,0,0,0" Background="#F0F0F0" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                    
                    <!-- Slot 5 -->
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="Slot 5:" FontWeight="Bold" Foreground="#2C3E50" Width="70" VerticalAlignment="Center"/>
                        <Button x:Name="Slot5White" Content="⚪ White" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFFFFF" BorderBrush="#2C3E50" BorderThickness="2" Cursor="Hand" Tag="Slot5"/>
                        <Button x:Name="Slot5Purple" Content="🟣 Purple" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#E8D5F2" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot5"/>
                        <Button x:Name="Slot5Gold" Content="🟡 Gold" Click="SlotColorClicked" Padding="12,8" Margin="0,0,8,0" Background="#FFD700" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" Tag="Slot5"/>
                        <TextBlock x:Name="Slot5Result" Text="Select" Foreground="#999999" Margin="15,0,0,0" VerticalAlignment="Center" FontWeight="Bold" MinWidth="80"/>
                        <Button x:Name="Slot5Counter" Content="Count: 0" Padding="12,8" Margin="15,0,0,0" Background="#F0F0F0" BorderBrush="#999999" BorderThickness="1" Cursor="Hand" IsEnabled="False"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Action Buttons -->
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <!-- Confirm Button -->
                <Button 
                    Grid.Column="0"
                    x:Name="ConfirmButton"
                    Content="✅ Confirm"
                    Click="ConfirmButton_Click"
                    Padding="20,15"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#3498DB"
                    Foreground="White"
                    Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                
                <!-- Reset Button -->
                <Button 
                    Grid.Column="2"
                    x:Name="ResetButton"
                    Content="🔄 Reset"
                    Click="ResetButton_Click"
                    Padding="20,15"
                    FontSize="18"
                    FontWeight="Bold"
                    Background="#E67E22"
                    Foreground="White"
                    Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border 
                                Background="{TemplateBinding Background}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            
            <!-- Stats Section -->
            <Border 
                Background="#FFFFFF" 
                CornerRadius="15"
                Padding="20"
                Margin="0,0,0,20"
                BorderBrush="#E0E0E0"
                BorderThickness="1">
                <StackPanel>
                    <TextBlock 
                        Text="📊 Statistics"
                        FontSize="16"
                        FontWeight="Bold"
                        Foreground="#2C3E50"
                        Margin="0,0,0,15"/>
                    
                    <TextBlock Foreground="#34495E" Margin="0,0,0,8">
                        <Run FontWeight="Bold">Session Pulls:</Run>
                        <Run x:Name="SessionPulls">0</Run>
                    </TextBlock>
                    <TextBlock Foreground="#34495E" Margin="0,0,0,15">
                        <Run FontWeight="Bold">Average per session:</Run>
                        <Run x:Name="AveragePulls">0</Run>
                    </TextBlock>
                    
                    <!-- Pull History Log -->
                    <TextBlock 
                        Text="📝 Pull Log"
                        FontSize="14"
                        FontWeight="Bold"
                        Foreground="#2C3E50"
                        Margin="0,0,0,10"/>
                    
                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto" Margin="0,0,0,0">
                        <StackPanel x:Name="PullHistoryPanel" Background="#F9F9F9" Margin="10"/>
                    </ScrollViewer>
                </StackPanel>
            </Border>
        </StackPanel>
    </Grid>
</Window>
